<CodeSnippet Format="1.1.0" xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <Header>
    <Title>class</Title>
    <Shortcut>c</Shortcut>
    <Description>class</Description>
    <Author>Josef Pihrt</Author>
    <SnippetTypes>
      <SnippetType>Expansion</SnippetType>
    </SnippetTypes>
    <Keywords>
      <Keyword>Meta-GenerateDeclarationAndDefinition</Keyword>
    </Keywords>
  </Header>
  <Snippet>
    <Declarations>
      <Literal Editable="false">
        <ID>_definitionEnd</ID>
      </Literal>
      <Literal Editable="false">
        <ID>_definitionStart</ID>
      </Literal>
      <Literal>
        <ID>name</ID>
        <ToolTip>Class name</ToolTip>
        <Default>ClassName</Default>
      </Literal>
    </Declarations>
    <Code Language="Cpp"><![CDATA[class $name$$_definitionStart$ {
public:
	$name$();
	~$name$();

private:
	$selected$$end$
};

$name$::$name$() {
}

$name$::~$name$() {
}$_definitionEnd$]]></Code>
  </Snippet>
</CodeSnippet>