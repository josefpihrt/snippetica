<CodeSnippet Format="1.1.0" xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <Header>
    <Title>HierarchicalDataTemplate</Title>
    <Shortcut>HierarchicalDataTemplate</Shortcut>
    <Description>HierarchicalDataTemplate</Description>
    <Author>Josef Pihrt</Author>
    <SnippetTypes>
      <SnippetType>Expansion</SnippetType>
      <SnippetType>SurroundsWith</SnippetType>
    </SnippetTypes>
    <Keywords>
      <Keyword>Meta-GenerateAlternativeShortcut</Keyword>
    </Keywords>
  </Header>
  <Snippet>
    <Declarations>
      <Literal>
        <ID>binding</ID>
        <ToolTip>Binding</ToolTip>
        <Default>Binding</Default>
      </Literal>
      <Literal>
        <ID>dataType</ID>
        <ToolTip>DataType</ToolTip>
        <Default>Type</Default>
      </Literal>
    </Declarations>
    <Code Language="Xaml"><![CDATA[<HierarchicalDataTemplate DataType="{x:Type $dataType$}" ItemsSource="{Binding $binding$}">$selected$$end$</HierarchicalDataTemplate>]]></Code>
  </Snippet>
</CodeSnippet>