<CodeSnippet Format="1.1.0" xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
  <Header>
    <Title>ListView</Title>
    <Shortcut>ltvw</Shortcut>
    <Description>ListView</Description>
    <Author>Josef Pihrt</Author>
    <SnippetTypes>
      <SnippetType>Expansion</SnippetType>
      <SnippetType>SurroundsWith</SnippetType>
    </SnippetTypes>
    <Keywords>
      <Keyword>Meta-AutoGenerated</Keyword>
      <Keyword>Meta-GenerateAlternativeShortcut</Keyword>
      <Keyword>Meta-GenerateXamlProperty</Keyword>
    </Keywords>
  </Header>
  <Snippet>
    <Declarations>
      <Literal>
        <ID>binding</ID>
        <ToolTip>Binding</ToolTip>
        <Default>Binding</Default>
      </Literal>
    </Declarations>
    <Code Language="Xaml"><![CDATA[<ListView ItemsSource="{Binding $binding$}">
	<ListView.View>
		<GridView>$selected$$end$
		</GridView>
	</ListView.View>
</ListView>]]></Code>
  </Snippet>
</CodeSnippet>